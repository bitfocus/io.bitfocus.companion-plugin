{
	"SDKVersion": 2,
	"Author": "Bitfocus AS",
	"CodePath": "app.html",
	"Description": "This lets you control instances in Companion. You need to install Companion 2.4 or newer from https://bitfocus.io/companion/ first, and enable support for this plugin in the Settings tab to be able to use this plugin.",
	"Name": "Companion Plugin",
	"Icon": "img/pluginIcon",
	"URL": "https://bitfocus.io/companion/",
	"Version": "2.3.0",
	"Software": {
		"MinimumVersion": "6.0"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "10.11"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Category": "Companion",
	"CategoryIcon": "img/pluginIcon",
	"Actions": [
		{
			"Icon": "img/actionIcon",
			"Name": "Companion button",
			"Controllers": ["Keypad", "Encoder"],
			"Encoder": {
				"layout": "actions/button/encoderLayout.json"
			},
			"States": [
				{
					"Image": "img/loadingIcon"
				}
			],
			"Tooltip": "Control anything in companion",
			"UUID": "io.bitfocus.companion-plugin.action",
			"SupportedInMultiActions": true,
			"PropertyInspectorPath": "actions/template/property-inspector/inspector.html"
		}
	],
	"Profiles": [
	  {
		"Name": "profiles/companion.streamDeckProfile",
