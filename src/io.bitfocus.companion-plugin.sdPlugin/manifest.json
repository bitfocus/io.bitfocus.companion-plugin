	  },
	  {
		"Name": "profiles/companionMini.streamDeckProfile",
		"DeviceType": 1
	  },
	  {
		"Name": "profiles/companionXL.streamDeckProfile",
		"DeviceType": 2
	  },
	  {
		"Name": "profiles/companionPlus.streamDeckProfile",
		"DeviceType": 7
	  }
	]
